<section class="hero">
	<div class="hero-content">
		<h1>AI for <span class="gradient-text">Human Movement</span></h1>
		<p class="tagline">Analyze, interpret, and optimize human motion through advanced biomechanics and real-time machine learning.</p>
		<div class="cta-group">
			<a href="#contact" class="btn primary">Get in Touch</a>
			<a href="#technology" class="btn secondary">Explore Technology</a>
		</div>
	</div>
	<div class="hero-visual">
		<!-- Placeholder for 3D/Motion visual. Using a CSS abstract shape for now or the logo -->
		<div class="glow-sphere"></div>
	</div>
</section>

<style>
	.hero {
		display: flex;
		align-items: center;
		justify-content: space-between;
		min-height: 80vh;
		padding: 4em 0;
		position: relative;
		overflow: visible;
	}
	.hero-content {
		max-width: 600px;
		z-index: 2;
	}
	h1 {
		font-size: 4.5em;
		line-height: 1.1;
		margin-bottom: 0.5em;
	}
	.gradient-text {
		background: var(--gradient-accent);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}
	.tagline {
		font-size: 1.25em;
		margin-bottom: 2em;
		color: var(--text-muted);
	}
	.cta-group {
		display: flex;
		gap: 1em;
	}
	.btn.primary {
		background: var(--accent);
		color: #000;
	}
	.btn.secondary {
		background: transparent;
		border: 1px solid var(--accent);
		color: var(--accent);
	}
	.btn.secondary:hover {
		background: rgba(0, 229, 255, 0.1);
	}
	
	.hero-visual {
		position: absolute;
		right: -10vw;
		top: 50%;
		transform: translateY(-50%);
		width: 50vw;
		height: 50vw;
		max-width: 700px;
		max-height: 700px;
		z-index: 1;
		opacity: 0.6;
		pointer-events: none; /* Let clicks pass through to background if needed */
	}
	
	.glow-sphere {
		width: 100%;
		height: 100%;
		background: radial-gradient(circle, var(--accent-glow) 0%, transparent 70%);
		border-radius: 50%;
		filter: blur(40px);
		animation: pulse 4s infinite alternate;
	}
	
	@keyframes pulse {
		0% { transform: scale(1); opacity: 0.5; }
		100% { transform: scale(1.1); opacity: 0.8; }
	}

	@media (max-width: 900px) {
		.hero {
			flex-direction: column;
			text-align: center;
			justify-content: center;
			padding-top: 6em;
		}
		.hero-content {
			margin: 0 auto;
		}
		.hero-visual {
			position: static;
			width: 100%;
			height: 300px;
			transform: none;
			margin-top: 2em;
		}
		h1 {
			font-size: 3em;
		}
		.cta-group {
			justify-content: center;
		}
	}
</style>
