---
import { CONTACT_EMAILS, CONTACT_ADDRESS, SITE_TITLE } from '../consts';
const today = new Date();
---

<footer>
	<div class="footer-content">
		<div class="footer-brand">
			<h3>{SITE_TITLE}</h3>
			<p>Next-generation AI movement intelligence.</p>
		</div>
		<div class="footer-links">
			<h4>Contact</h4>
			<p>Email: <a href={`mailto:${CONTACT_EMAILS.INFO}`}>{CONTACT_EMAILS.INFO}</a></p>
			<p>Address: {CONTACT_ADDRESS}</p>
		</div>
	</div>
	<div class="copyright">
		&copy; {today.getFullYear()} {SITE_TITLE}. All rights reserved.
	</div>
</footer>

<style>
	footer {
		padding: 4em 1em 2em 1em;
		background: #000;
		color: var(--text-muted);
		text-align: center;
		border-top: 1px solid rgba(255, 255, 255, 0.1);
	}
	.footer-content {
		display: flex;
		justify-content: space-between;
		max-width: 1200px;
		margin: 0 auto 2em auto;
		text-align: left;
		flex-wrap: wrap;
		gap: 2em;
	}
	.footer-brand h3 {
		color: var(--text-main);
	}
	.footer-links h4 {
		color: var(--text-main);
		margin-bottom: 1em;
	}
	a {
		color: var(--accent);
	}
	.copyright {
		font-size: 0.9em;
		border-top: 1px solid rgba(255, 255, 255, 0.05);
		padding-top: 2em;
	}
	@media (max-width: 720px) {
		.footer-content {
			flex-direction: column;
			text-align: center;
		}
	}
</style>
