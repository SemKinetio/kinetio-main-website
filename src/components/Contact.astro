---
import { CONTACT_EMAILS, CONTACT_ADDRESS } from '../consts';
---

<section id="contact" class="contact">
	<div class="contact-content">
		<h2>Get in <span class="gradient-text">Touch</span></h2>
		<p class="subtitle">Ready to elevate your performance? Let's connect.</p>
		
		<div class="contact-info">
			<div class="contact-item">
				<h3>Email</h3>
				<a href={`mailto:${CONTACT_EMAILS.INFO}`}>{CONTACT_EMAILS.INFO}</a>
			</div>
			<div class="contact-item">
				<h3>Support</h3>
				<a href={`mailto:${CONTACT_EMAILS.SUPPORT}`}>{CONTACT_EMAILS.SUPPORT}</a>
			</div>
			<div class="contact-item">
				<h3>Location</h3>
				<p>{CONTACT_ADDRESS}</p>
			</div>
		</div>
	</div>
</section>

<style>
	.contact {
		padding: 6em 0;
		text-align: center;
	}
	.contact-content {
		max-width: 900px;
		margin: 0 auto;
	}
	h2 {
		font-size: 3em;
		margin-bottom: 0.5em;
	}
	.gradient-text {
		background: var(--gradient-accent);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}
	.subtitle {
		font-size: 1.2em;
		margin-bottom: 3em;
		color: var(--text-muted);
	}
	.contact-info {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2em;
		margin-top: 2em;
	}
	.contact-item {
		padding: 2em;
		background: var(--background-card);
		border: 1px solid rgba(255, 255, 255, 0.1);
		border-radius: 12px;
		transition: 0.3s;
	}
	.contact-item:hover {
		border-color: var(--accent);
		box-shadow: 0 0 20px rgba(0, 229, 255, 0.1);
	}
	.contact-item h3 {
		font-size: 1.2em;
		margin-bottom: 0.5em;
		color: var(--accent);
	}
	.contact-item a {
		color: var(--text-main);
		text-decoration: none;
		font-size: 1em;
	}
	.contact-item a:hover {
		color: var(--accent);
	}
	.contact-item p {
		margin: 0;
		color: var(--text-main);
	}
</style>
